<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
<div class="main-container" style="display: flex;">
    <!-- Navigation Panel (Cột ngoài cùng bên trái) -->
    <div class="nav_panel" style="width: 15%; padding: 10px; border-right: 1px solid #ccc;">
        <ul>
            <li id="nav_messages" style="cursor: pointer; padding: 10px; border-bottom: 1px solid #ddd;">Tin Nhắn</li>
            <li id="nav_contacts" style="cursor: pointer; padding: 10px;">Danh bạ</li>
        </ul>
    </div>

    <!-- Chat Mode -->
    <div id="chat_mode" style="width: 85%; display: block;">
        <div class="user_panel" style="width: 25%; padding: 10px;">
            <div class="user_search">
                <input type="text" id="search_user" placeholder="Search user by name">
            </div>
            <ul class="list_user">
                <% accounts.forEach((account)=> { %>
                    <li style="cursor: pointer;">
                        <div style="display: flex;">
                            <span>UserName: </span>
                            <p>
                                <%= account.username %>
                            </p>
                        </div>
                        <div style="display: flex;">
                            <span>FullName: </span>
                            <p>
                                <%= account.fullname %>
                            </p>
                        </div>
                    </li>
                    <% }); %>
            </ul>
        </div>

        <div class="chat_list"
            style="width: 25%; padding: 10px; border-left: 1px solid #ccc; border-right: 1px solid #ccc;">
            <h3>Chats</h3>
            <ul id="chat_list_ul"></ul>
        </div>

        <div class="container" style="width: 50%; padding: 10px;">
            <ul id="ul_message"></ul>
            <div class="container_send">
                <input type="text" id="message" placeholder="Enter your message">
                <button id="btn_send">Gửi</button>
            </div>
        </div>
        <div style="clear: both;"></div>
    </div>

    <!-- Contacts Mode (Danh bạ) -->
    <div id="contacts_mode" style="width: 85%; display: none;">
        <!-- Phần render lời mời kết bạn -->
        <div style="padding: 10px;">
            <h3>Lời mời kết bạn</h3>
            <ul id="friend_requests_container" style="list-style: none; padding: 0;"></ul>
        </div>
        <!-- Phần render danh sách bạn bè -->
        <div style="padding: 10px;">
            <h3>Danh sách bạn bè</h3>
            <ul id="friends_container" style="list-style: none; padding: 0;"></ul>
        </div>
        <div style="padding: 10px;">
            <input type="text" id="search_contacts" placeholder="Search user by username">
        </div>
        <ul class="list_user" id="contacts_list"
            style="padding: 10px; background-color: rgb(204, 94, 94); overflow-y: scroll; height: 90vh;">
            <% accounts.forEach((account)=> { %>
                <li style="cursor: pointer; display: none;">
                    <div style="display: flex;">
                        <span>UserName: </span>
                        <p>
                            <%= account.username %>
                        </p>
                    </div>
                    <div style="display: flex;">
                        <span>FullName: </span>
                        <p>
                            <%= account.fullname %>
                        </p>
                    </div>
                    <button class="btn_add_friend" data-username="<%= account.username %>">Kết bạn</button>
                </li>
                <% }); %>
        </ul>
    </div>
</div>
<script>
    const myUsername = localStorage.getItem('username');
</script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/client.js"></script>